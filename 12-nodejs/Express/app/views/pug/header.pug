        span &nbsp;&nbsp;&nbsp;
      a#world-btn.opts(href="/") 
        img(src="./assets/images/options/map.png", alt="СВЕТЪТ", width='30px', height='30px', title='СВЕТЪТ')
  nav
    div
      .menu-bar-btn
        span
        span
        span
      |
      ul.menu-bar.animated
        li.main-btn
          a.menu-bar-item(href="/home")
            i.home.fa.fa-home(aria-hidden="true")
        each topic in topics
          li.main-btn
            a.menu-bar-item(href=topic.link)=topic.name
