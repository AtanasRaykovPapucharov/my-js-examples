link(rel='stylesheet', href='./resources/css/animate.min.css', type='text/css')
header.animated.fadeIn
  div.container-flex
    div.item-flex-1
      a(href="/")
        img.logo(src="assets/images/logo.png", alt="LOGO", width="90px", height="auto")
